@model GymBooking.v1.Models.GymClass
@{
    ViewData["Title"] = "GymClassDetails";
}

<h1>Gym Class Details</h1>

<div>
    <h4>Gym Class</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <h4>Participants</h4>

    @if (Model.AttendingMembers != null && Model.AttendingMembers.Count > 0)
    {
        <table class="table">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var participants in Model.AttendingMembers)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => participants.ApplicationUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => participants.ApplicationUser.Email)
                </td>
            </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h5>There are no participants</h5>
    }
</div>
<div>
    <a asp-controller="Admin" asp-action="EditGymClass" asp-route-id="@Model.GymClassId">Edit</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
